<% provide(:title, @title) %>
<div class="row">
	<aside class="col-sm-4">
		<section>
			<%= gravatar_for @user %>
			<h1><%= @user.name %></h1>
			<span><%= link_to "View my Profile", @user %></span>
			<span><b>Microposts:</b> <% @user.microposts.count %></span>
		</section>

		<section>
			<%= render "shared/stats" %>
			<% if @users.any? %>
				<div class="user-avatars">
					<% @users.each do |user| %>
						<%= link_to gravatar_for(user, size: 40), user %>
					<% end %>
				</div>
			<% end %>
		</section>
	</aside>
	<section class="col-sm-8">
		<h3><%= @title %></h3>
		<% if @users.any? %>
			<ul class="users">
				<%= render @users %>
			</ul>
			<%= will_paginate %>
		<% end %>
	</section>
</div>