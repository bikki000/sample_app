<%= form_for @user, url: {action: options[:action]} do |form| %>
	<%#= render 'shared/error_messages', object: form.object %>
	<%#= render 'field', locals: {field_type: form.text_field, field_name: :name} %>

	<div class="form-group">
		<%= form.label :name, class: "control-label" %>
		<%= form.text_field :name, class: "form-control" %>
		<%= render "shared/error", locals: { field: :name } %>
	</div>
	<div class="form-group">
		<%= form.label :email, class: "control-label" %>
		<%= form.text_field :email, class: "form-control" %>
		<%= render "shared/error", locals: { field: :email } %>
	</div>
	<div class="form-group">
		<%= form.label :password, class: "control-label" %>
		<%= form.password_field :password, class: "form-control" %>
		<%= render "shared/error", locals: { field: :password } %>
	</div>
	<div class="form-group">
		<%= form.label :password_confirmation, class: "control-label" %>
		<%= form.password_field :password_confirmation, class: "form-control" %>
		<%= render "shared/error", locals: { field: :password_confirmation } %>
	</div>
	<div class="form-group">
		<%= form.label :date_of_birth, class: 'control-label' %>
		<%= form.date_field :date_of_birth, class: 'form-control' %>
		<%= render "shared/error",locals:{ field: :date_of_birth } %>
	</div>
	<div class="form-group">
		<%= form.submit class: "btn btn-primary btn-large" %>
	</div>
<% end %>
